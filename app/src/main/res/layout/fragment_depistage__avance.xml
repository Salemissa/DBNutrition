<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pcim.Depistage_Avance">


    <include
        android:id="@+id/header_VIEW"
        layout="@layout/structurelayout"
        android:layout_width="match_parent"
        android:layout_height="125dp"

        android:layout_marginTop="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lyoutage"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_VIEW"
        android:layout_marginTop="49dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Age"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/age"
            android:layout_width="226dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyoutrouge"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyoutage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="46dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Rouge Fille"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Rouge"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#FF0000"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Rouge Garcon"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/RougeG"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FF0000"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyoutjaune"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyoutrouge"
        android:layout_marginTop="26dp">
        <TextView
            android:id="@+id/textViewJ"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Jaune Fille"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/JauneF"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#FFFF00"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Jaune Garcon"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/JauneG"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFF00"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyoutvert"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyoutjaune"
        android:layout_marginTop="26dp">

        <TextView
            android:id="@+id/textViewV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Vert Fille  "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vertF"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="#40FF00"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Vert Garcon  "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/VertG"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="#40FF00"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyoutimage"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyoutvert"
        android:layout_marginTop="26dp">

        <TextView
            android:id="@+id/textViewOdeme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Odeme Fille  "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/odemeF"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#BBBB"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Odeme Garcon  "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/odemeG"
            android:layout_width="58dp"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content"
            android:background="#BBBB"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />
    </LinearLayout>


    <Button
        android:id="@+id/imageButton2"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:layout_below="@+id/lyoutimage"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="Ajouter" />

    <ImageView
        android:id="@+id/imageRaport"
        android:layout_width="181dp"
        android:layout_height="235dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginRight="-10dp"
        android:src="@drawable/add_a_photo" />

    <Button
        android:id="@+id/button3"
        android:layout_width="94dp"
        android:layout_height="136dp"
        android:layout_below="@+id/lyoutjaune"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="237dp"
        android:layout_marginLeft="237dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="270dp"
        android:layout_marginRight="270dp"
        android:background="@drawable/sync"
        android:text="Button" />


</RelativeLayout>