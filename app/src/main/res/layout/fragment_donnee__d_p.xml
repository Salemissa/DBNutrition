<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pcim.Donnee_DP">


    <include
        android:id="@+id/header_VIEW"
        layout="@layout/structurelayout"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />


    <LinearLayout
        android:id="@+id/lyoutage"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_VIEW"
        android:layout_marginTop="49dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Age"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/age"
            android:layout_width="77dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Rouge" />

        <EditText
            android:id="@+id/Rouge"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Jaune" />

        <EditText
            android:id="@+id/Jaune"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:background="#FFFF00"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="4" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyoutimage2"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="359dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Vert" />
        <EditText
            android:id="@+id/Vert"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:background="#40FF00"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Odeme" />

        <EditText
            android:id="@+id/Odeme"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:background="#886A08"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyoutimage"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyoutage"

        android:layout_marginTop="105dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="-3 Zscore " />

        <EditText
            android:id="@+id/zscore1"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Zscore 2">

        </TextView>

        <EditText
            android:id="@+id/zscore2"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:background="#BBBB"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="4" />
    </LinearLayout>

    <Button
        android:id="@+id/Ajouter"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:layout_below="@+id/lyoutimage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="Ajouter" />


    <ImageView
        android:id="@+id/imageRaport"
        android:layout_width="182dp"
        android:layout_height="198dp"

        android:layout_below="@+id/header_VIEW"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:src="@drawable/add_a_photo" />


</RelativeLayout>